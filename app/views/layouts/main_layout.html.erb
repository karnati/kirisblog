 <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title><%= content_for?(:title) ? content_for(:title) : 'Kiris Blog' %></title>
  <%#= stylesheet_link_tag "default" %>
  <%# if session[:theme] == "blue" %>
  <%= stylesheet_link_tag "stylesheet_main", 'nivo-slider','nivo_default','nivo_style' %>
  <%# else %>
  <%#= stylesheet_link_tag "stylesheet_green" %>
  <%# end %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'rails.validations','jquery.nivo.slider' %>
  <link rel="shortcut icon" href="/images/favicon.png" />
</head>

<body class="homebg">

<!--header starts-->
<div id="header">
  <!--    <div style="float: right;color: white;" id="theme_selection">
      <%#= select_tag :theme  ,  options_for_select(["blue","green"]),  :include_blank => "select theme" %>
    </div>
    <div id="theme_result" style="color: white;float: right;">
          you selected <%#= session[:theme] %>    <%#= link_to "change theme", '#', :id => "change_theme" %>
    </div>-->
  <%= javascript_tag do %>
      window.selected_theme = "<%=j session[:theme] %>";
  <% end %>
  <div class="logo">
    <h1>  <%= link_to image_tag("/images/Logo_main.png"), root_path  %></h1>
  </div>
  <div class="right">
    <div id="navigation">
      <ul>
        <li class="first"><%= link_to "Home", root_path %></li>
        <li><a href="/home/about_me">About</a></li>

        <li class="last"><a href="/home/contact_me">Contact</a></li>
      </ul>
    </div>
  </div>
</div>
<!--header ends-->


<div id="wrapper">

  <!--entire container starts-->
  <div id="container">
    <!--middle starts-->
    <div id="wrapper1">


        <div class="slider-wrapper theme-default" style="275px;">
            <div id="slider" class="nivoSlider">
                <img src="/images/slider/1.jpg" data-thumb="images/toystory.jpg" alt="" />
                <a href="http://kiris.in"><img src="/images/slider/2.jpg" data-thumb="/images/slider/2.jpg" alt="" title="This is an example of a caption" /></a>
                <img src="/images/slider/3.jpg" data-thumb="/images/slider/02.jpg" alt="" data-transition="slideInLeft" />
                <img src="/images/slider/4.jpg" data-thumb="/images/slider/3.jpg" alt="" title="#htmlcaption" />
            </div>
            <div id="htmlcaption" class="nivo-html-caption">
                <strong>This</strong> is an example of a <em>HTML</em> caption with <a href="http://kiris.in">Read more</a>.
            </div>
        </div>

    </div>
    <div id="middle_container">




      <div class="left">
        <%= render "/layouts/import_flash" %>
        <%= yield %>

      </div>

      <div class="right">
        <div id="sidebar">
          <%= render "/layouts/sidebar" %>
        </div>
      </div>

    </div>
    <!--middle ends-->
    <!--footer starts-->
    <div id="footer_container">
      <ul>
        <li class="first"><a href="/home">Home</a></li>
        <li><a href="/home/about_me">About</a></li>

        <li class="last"><a href="/home/contact_me">Contact</a></li>
      </ul>
      Kiris Â© 2012.All rights reserved
    </div>
    <!--footer ends-->
  </div>
</div>
</body>
</html>
 <script type="text/javascript">
    $(window).load(function() {
        $('#slider').nivoSlider();
    });
    </script>

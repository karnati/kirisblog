<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title><%= content_for?(:title) ? content_for(:title) : 'Kiris Blog' %></title>
  <%#= stylesheet_link_tag "default" %>
  <%# if session[:theme] == "blue" %>
  <%= stylesheet_link_tag "stylesheet_main" %>
      <%# else %>
          <%#= stylesheet_link_tag "stylesheet_green" %>
      <%# end %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'rails.validations' %>
  <link rel="shortcut icon" href="/images/favicon.png" />
</head>

<body class="homebg">
<!--entire container starts-->
<div id="container">
  <!--header starts-->
  <div id="header">
<!--    <div style="float: right;color: white;" id="theme_selection">
      <%#= select_tag :theme  ,  options_for_select(["blue","green"]),  :include_blank => "select theme" %>
    </div>
    <div id="theme_result" style="color: white;float: right;">
          you selected <%#= session[:theme] %>    <%#= link_to "change theme", '#', :id => "change_theme" %>
    </div>-->
    <%= javascript_tag do %>
        window.selected_theme = "<%=j session[:theme] %>";
    <% end %>
    <div class="logo">
      <h1>  <%= link_to image_tag("/images/Logo_main.png"), root_path  %></h1>
    </div>
    <div class="right">
      <div id="navigation">
        <ul>
          <li class="first"><%= link_to "Home", root_path %></li>
          <li><a href="/home/about_me">About</a></li>

          <li class="last"><a href="/home/contact_me">Contact</a></li>
        </ul>
      </div>
    </div>
  </div>
  <!--header ends-->
  <!--middle starts-->
  <div id="middle_container">
    <div class="left">
      <%= render "/layouts/import_flash" %>
      <%= yield %>

    </div>

    <div class="right">
      <div id="sidebar">
        <%= render "/layouts/sidebar" %>
      </div>
    </div>

  </div>
  <!--middle ends-->
  <!--footer starts-->
  <div id="footer_container">
    <ul>
      <li class="first"><a href="/home">Home</a></li>
      <li><a href="/home/about_me">About</a></li>

      <li class="last"><a href="/home/contact_me">Contact</a></li>
    </ul>

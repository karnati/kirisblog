 
<% @articles.each do |article| %>
<div class="post" style="padding-top: 57px;">
  <h3 class="date"><%= article.created_at.strftime("%B %d, %Y") %> </h3>
  <h2 class="title"><%= article.title %></h2>

  <div class="entry">
    <p><%= article.description %></p>
  </div>
  <p class="meta">
    <%= link_to "Read More ...",home_path(article.title),:class => "more" %> <b>|</b>
    <a href="#" class="comments"> View Comments (<%= article.comments.count%>)</a>
     <%= link_to "Post a Comment", "#" , :title => "Post a Comment" %>

  </p>
</div>

 <% end %>

 

<% title "Kiris Blog | Listing Users" %>
<div class="list" id="template_category_list">
  <div class="list" id="admintable">
    <table width="100%">
      <tbody><tr><td align="left"><h3 align="left">Listing Users</h3></td>
        <td align="right"><b><i>per page</i></b><%= per_page%> | <%= page_entries_info @users %></td>
      </tr>
      </tbody>
    </table>

    <table cellspacing="1" class="tablesorter">
      <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Username</th>
        <th>Email</th>
        <th></th>

      </tr>
      </thead>
      <tbody>

      <% @users.each do |user| %>
          <tr class="<%= cycle( 'even','odd') %>">
            <td><%= highlight(user.first_name, params[:search]) %></td>
            <td><%= user.last_name %></td>
            <td><%= highlight(user.username, params[:search]) %></td>
            <td><%= highlight(user.email, params[:search]) %></td>

            <td><%= link_to 'Show', admin_user_path(user) %>  |

              </span> <i id = "status_<%= user.id %>">   <%= link_to user.status? ? "Active" : "Inactive",manage_status_admin_user_path(:id => user.id)  %> </i></td>
          </tr>
      <% end %>

      </tbody>
    </table>
    <div style="width:auto; clear:both; margin:10px 0px 10px 0px; float:right; color:#0066FF;">
      <h4 align="right"><%= will_paginate @users%></h4>
    </div>

  </div>
</div>
